# Supabase Configuration
# 수파베이스 프로젝트 URL (https://mucfwbfkewagfwgtvouc.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://mucfwbfkewagfwgtvouc.supabase.co

# 수파베이스 익명 키 (Public/Anonymous Key)
# 이 키는 브라우저에 노출되어도 안전한 키입니다.
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# 수파베이스 서비스 역할 키 (Service Role Key) - 선택사항
# 관리자 권한이 필요한 서버 사이드 작업에 사용됩니다.
# 절대 브라우저에 노출되지 않도록 주의하세요!
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Next.js Configuration
# 개발 환경에서는 'development', 프로덕션에서는 'production'
NODE_ENV=development

# 애플리케이션 URL (배포 시 변경)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 세션 보안을 위한 JWT 시크릿 (선택사항)
# 32글자 이상의 랜덤 문자열을 사용하세요
NEXTAUTH_SECRET=your_nextauth_secret_here

# 데이터베이스 설정 (선택사항 - 직접 연결 시)
# DATABASE_URL=postgresql://[username]:[password]@[host]:[port]/[database]

# 로그 설정
LOG_LEVEL=info

# 파일 업로드 설정 (향후 확장용)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 이메일 설정 (향후 확장용)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# 카카오 알림톡 설정 (향후 확장용)
# KAKAO_REST_API_KEY=your_kakao_rest_api_key
# KAKAO_ADMIN_KEY=your_kakao_admin_key

# 결제 시스템 설정 (향후 확장용)
# IAMPORT_API_KEY=your_iamport_api_key
# IAMPORT_SECRET_KEY=your_iamport_secret_key

# 백업 설정 (향후 확장용)
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=daily
# BACKUP_RETENTION_DAYS=30